       <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
            <a href="/search?q=Puma">
          <img src="/img/slider1.jpg" style="width:100%">
            </a>
        </div>
      
        <div class="mySlides fade">
            <a href="/search?q=Nike">
          <img src="/img/slider2.jpg" style="width:100%">
            </a>
        </div>
      
        <div class="mySlides fade">
            <a href="/search?q=Adidas">
          <img src="/img/slider4.jpg" style="width:100%">
            </a>
        </div>
      
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
      </div>
      <br>
      
      <!-- The dots/circles -->
      <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
      </div>
       
       <div class="container">
            <div class="grid">
                <div class="grid__row app-content">
                    <div class="grid__column">
                        <nav class="category">
                            <h3 class="trademark">Thương hiệu</h3>
                            <ul class="list-trademark">
                                <li class="name-trademark"><a href="/search?q=Nike">Nike</a></li>
                                <li class="name-trademark"><a href="/search?q=Adidas">Adidas</a></li>
                                <li class="name-trademark"><a href="/search?q=Puma">Puma</a></li>
                                <li class="name-trademark"><a href="/search?q=Mizuno">Mizuno</a></li>
                            </ul>
                        </nav>
                    </div>
                    {{#each this.categories}}
                   <div class="grid__column">
                       <div class="home-product-item">
                           <div class="home-product-item-img" style="background-image: url(/img/{{productID}}/main.jpg)"></div>
                           <a href="product/view/{{productID}}"><h2 class="home-product-item-name">{{productName}}</h2></a>
                           <div class="home-product-item-price">{{format_number productPrice}}đ</div>
                       </div>   
                   </div>
                   {{/each}}
                </div>   
            </div>
       </div>