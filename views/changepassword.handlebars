<div class="container-login">
    <form class="myform" method="POST" action="/account/changepassword">
        <h2>Đổi mật khẩu</h2>
        {{#if err}}
        <div class="alert alert-danger" role="alert">
            {{msg}}
        </div>
        {{/if}}
        <input type="password" placeholder="Nhập mật khẩu cũ" name="oldpassword">
        <input type="password" placeholder="Mật khẩu mới" name="newpassword">
        <input type="password" placeholder="Xác nhận mật khẩu mới" name="confirm">
        <button type="submit">Cập nhật mật khẩu</button>
    </form>
    <div class="image">
        <img src="/img/logoo.png" width="300px">
    </div>
</div>