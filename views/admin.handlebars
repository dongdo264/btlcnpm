<div class="container">
            <div id="content">
                <div class="container_content">
                    <div class="grid__row  grid__full-width">
                        {{#if empty}}
                            <h1 class="heading-product" style="color: white;">Không có đơn hàng nào</h1>
                        {{else}}
                            <h1 class="heading-product">Danh sách đơn hàng</h1>
                        {{/if}}
                            <div class="sort-product">
                                <div class="custom-select" style="width:200px;">
                                    <select class="select-box" onchange="window.location.href=this.value">
                                      <option value="/admin?day={{day}}">Tất cả đơn hàng</option>
                                      <option value="/admin?status=đang xử lý&day={{day}}">Đang xử lý</option>
                                      <option value="/admin?status=đang giao hàng&day={{day}}">Đang giao hàng</option>
                                      <option value="/admin?status=đã hoàn tất&day={{day}}">Đã hoàn tất</option>
                                      <option value="/admin?status=bị hủy&day={{day}}">Bị hủy</option>
                                    </select>
                                  </div>
                            </div>
                        </div>

                    <div class="list_orders">
                        {{#if empty}}
                        {{else}}
                        <table class="table_orders">
                            <thead>
                                <tr class="title-row">
                                    <th>Tên khách hàng</th>
                                    <th>Số ĐT</th>
                                    <th>Địa chỉ</th>
                                    <th>Ngày đặt hàng</th>
                                    <th>Ghi chú</th>
                                    <th>Trạng thái</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each this.rows}}
                                <tr class="order_detail">
                                    <td class="describe_product">
                                        {{customerName}}
                                    </td>
                                    <td class="price_product">
                                        <span>{{phone}}</span>
                                    </td>
                                    <td>
                                        {{address}}
                                    </td>
                                    <td class="price_product">
                                        <span>{{orderDate}}</span>
                                    </td>
                                    <td class="price_total">
                                        <div class="cl--primary" style="color:#ffe11b">{{comment}}</div>
                                    </td>
                                    <td class="price_product">
                                        <span>{{status}}</span>
                                    </td>
                                    
                                    <td class="recycle">
                                        <a href="/admin/vieworder/{{orderNumber}}">
                                            <button class="btn btn-secondary" type="button">
                                                <i class="ti-pencil-alt" style="color:lime"></i><span style="color:lime"> Chi tiết</span>
                                            </button>
                                        </a>
                                    </td>

                                    <td class="recycle">
                                        <a href="/admin/delete?id={{orderNumber}}">
                                            <button class="btn btn-secondary" type="button" onclick="return confirm('Bạn có chắc muốn xóa bỏ đơn hàng này?')">
                                                <i class="ti-trash"></i><span>Xoá</span>
                                            </button>
                                        </a>
                                    </td>
                                    
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        {{/if}}
                    </div>
                </div>
            </div>
       </div>