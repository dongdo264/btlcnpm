<div class="container" >
    {{#each this.categories}}
        <form id="content" method="post">
            <div class="container_content">
                <div class="section_header">
                    <div class="container_section_header">
                        <h2 class="section_title">Thêm số lượng</h2>
                    </div>
                </div>

                <div class="form-add-quantity">
                    <label class="product-info">Tên sản phẩm : {{productName}}</label>
                    <label class="product-info">Thương hiệu : {{productBrand}}</label>
                    <label class="product-info">Mô tả : {{productDescription}}</label>
                    <label class="product-info">giá : {{productPrice}}</label>
                    <label class="product-info">Loại : {{style}}</label>
                </div>

                <div class="size-form">
                            <div class="form-group-2">
                                <label class="product-info">Size</label>
                                    <input type="text" class="add-size" id="size38" name="size38" value="38"></input>
                                    <input type="text" class="add-size" id="size39" name="size39" value="39"></input>
                                    <input type="text" class="add-size" id="size40" name="size40" value="40"></input>
                                    <input type="text" class="add-size" id="size41" name="size41" value="41"></input>
                                    <input type="text" class="add-size" id="size42" name="size42" value="42"></input>
                            </div>
                            <div class="form-group-3">
                                <label class="product-info">Số lượng</label>
                                    <input type="text" class="form-size-control" id="aSize38" name="aSize38">
                                    <input type="text" class="form-size-control" id="aSize39" name="aSize39">
                                    <input type="text" class="form-size-control" id="aSize40" name="aSize40">
                                    <input type="text" class="form-size-control" id="aSize41" name="aSize41">
                                    <input type="text" class="form-size-control" id="aSize42" name="aSize42">
                            </div>
                </div>
                
                

                <div class="button_add">
                    <button class="btn-add">Thêm</button>
                </div>
            </div>
        </form>
    {{/each}}
</div>