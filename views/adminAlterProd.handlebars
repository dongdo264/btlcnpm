<div class="container">
    {{#each this.categories}}
        <form id="content" method="post">
            <div class="container_content">
                <div class="section_header">
                    <div class="container_section_header">
                        <h2 class="section_title">Sửa sản phẩm</h2>
                    </div>
                </div>
                
                <div class="add_product">
                    <div class="col col1">
                        <div class="form-group">
                            <label class="product-info">Tên sản phẩm :</label>
                            <input type="text" class="form-control" id="editNameP" name="editNameP" value="{{productName}}">
                        </div>
                        <div class="form-group note-shipping">
                        <label class="title-info">Thương hiệu sản phẩm</label>
                                <select class="form-control" id="editBrandP" name="editBrandP" style="background-color:  #1d1d1d; height : 30px" name="stt">
                                    <option value="Nike" id="editBrandP" name="editBrandP">Nike</option>
                                    <option value="Adidas" id="editBrandP" name="editBrandP">Adidas</option>
                                    <option value="Mizuno" id="editBrandP" name="editBrandP">Mizuno</option>
                                    <option value="Puma" id="editBrandP" name="editBrandP">Puma</option>
                                </select>
                        </div>
                        <div class="form-group">
                            <label for="" class="product-info">Miêu tả về sản phẩm :</label>
                            <input type="text" class="form-control" id="editDescP" name="editDescP" value="{{productDescription}}">
                        </div>
                        <div class="form-group">
                            <label for="" class="product-info">Giá sản phẩm :</label>
                            <input type="text" class="form-control" id="editPriceP" name ="editPriceP" value="{{productPrice}}">
                        </div>
                        <div class="form-group note-shipping">
                        <label class="title-info">Loại đinh :</label>
                                <select class="form-control" id="editStyleP" name="editStyleP" style="background-color:  #1d1d1d; height : 30px" name="stt">
                                    <option value="TF, Cỏ nhân tạo" id="editStyleP" name="editStyleP">TF, Cỏ nhân tạo</option>
                                    <option value="FG, Cỏ tự nhiên" id="editStyleP" name="editStyleP">FG, Cỏ tự nhiên</option>
                                </select>
                        </div>
                        
                    </div>
                </div>

                <div class="button_add">
                    <button class="btn-add">Sửa</button>
                </div>
            </div>
        </form>
    {{/each}}
</div>
